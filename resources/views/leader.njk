{% extends "layout" %} {% block content %}

<h1>Vezető létrehozása</h1>

<ul class="list-group">
    {% for leader in leaders %}
    <li class="list-group-item">{{ leader.name }}</li>

    <li><input type="radio" name="vezeto" value={{ leadername.id }}> {{ leader.name }} </li>
    {% endfor %}
</ul>

<form class="form-horizontal" action="/leader" method="POST">
    {{ csrfField }}
    <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">Kollégiumi vezető neve</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" name="name" value="{{ old('name') }}">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Mentés</button>
        </div>
    </div>
</form>

{% endblock %}