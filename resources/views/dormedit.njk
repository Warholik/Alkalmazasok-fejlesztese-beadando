{% extends "layout" %} {% block content %}

<h1>A következő kollégium módsítása: {{dormitory.name}}</h1>


<form class="form-horizontal" action="/dormedit/{{ dormitory.id }}/edit" method="POST">
    {{ csrfField }}


    <div class="form-group">
        <label for="inputleiras" class="col-sm-2 control-label">Kollégium leírása</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputleiras" name="leiras" value="{{ old('leiras') }}">
        </div>
    </div>

    <div class="form-group">
        <label for="inputvezeto" class="col-sm-2 control-label">Kollégium vezetoje</label>
        <div class="col-sm-10">
            {% for leadername in leader %}
                <li><input type="radio" name="vezeto" value={{ leadername.id }}> {{ leadername.name }}  </li>
            {% endfor %}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Mentés</button>
        </div>
    </div>
</form>

{% endblock %}